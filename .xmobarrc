Config {
       font = "xft:DejaVu Sans Mono:size=22:antialias=true"
       , bgColor = "#242424"
       , fgColor = "gray"
       , position = TopW L 90
       , commands = [ Run Cpu ["-L","3","-H","50","-l","gray90","-n","gray90","-h","#F25555"] 10
                    , Run Memory ["-t","Mem: <usedratio>%","-H","80","-L","10","-l","gray90","-n","gray90","-h","#F25555"] 10
                    , Run Date "%a %b %_d %I:%M %p" "date" 10
                    , Run DynNetwork ["-t","Net: +<rx>, -<tx>","-H","200","-L","10","-h","gray90","-l","gray90","-n","gray90"] 10
                    , Run CoreTemp ["-t", "Temp: <core1>", "-L", "40", "-H", "75", "-l", "lightblue", "-n", "gray90", "-h", "#F25555"] 50
                    , Run Com "network-check.sh" [] "netcheck" 5
                    -- battery monitor
                    , Run Battery        [ "--template" , "Batt: <acstatus>"
                                         , "--Low"      , "10"        -- units: %
                                         , "--High"     , "80"        -- units: %
                                         , "--low"      , "#F25555"
                                         , "--normal"   , "gray90"
                                         , "--high"     , "#7CCC86"

                                         , "--" -- battery specific options
                                                   -- discharging status
                                                   , "-o"   , "<left>% (<timeleft>)"
                                                   -- AC "on" status
                                                   , "-O"   , "<fc=#7CCC86>Charging</fc>"
                                                   -- charged status
                                                   , "-i"   , "<fc=#7CCC86>Charged</fc>"
                                         ] 50
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %coretemp% | %memory% | <fc=#69DFFA>%date%</fc>"
       }
